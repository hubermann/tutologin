<!DOCTYPE html>
<html>
<head>
  <title>Tutologin</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <style type="text/css">

  body{font-family: Arial, "MS Trebuchet", sans-serif; width:960px; margin:0 auto;}
  #main_menu{float:left; width:100%; margin:0; }
  #main_menu>ul, li{float:left; list-style:none; }
  #main_menu a{float:left; padding:5px; }
  #userinfo{width:100%; float:left; padding:3px 15px; background:#e2e2e2; border:1px dashed #444; margin:15px 0}
  .error_msg{color:red;}
  .autor{color:#444;}
</style>
</head>
<body>

	<div id="flash">
  <% if flash[:notice] %>
    <h3 class="info_box"><%= flash[:notice] %></h3>
  <% end %>
  <% if flash[:error] %>
    <h3 class="error_box"><%= flash[:error] %></h3>
  <% end %> 
</div>
<%= session[:return_to] %>
<ul id="main_menu">
  <li><a href="/">Posts</a></li>
  <li><a href="/users">Users</a></li>
  <% if @current_user %>
    <li><%= link_to 'profile', profile_path %></li>
    <li><%= link_to 'logout', logout_path %></li>
  <% else%>
   <li><%= link_to 'login', login_path %></li>
   <li><%= link_to 'register', register_path %></li>
  <% end %>
</ul>
  <% if @current_user %>
    <div id="userinfo"> <p>Logueado como:<strong><%= @current_user.nombre + " " +@current_user.apellido %></strong></p></div>
  <% end %>
<%= yield %>

</body>
</html>
